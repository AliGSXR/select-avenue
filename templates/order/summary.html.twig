{% extends 'base.html.twig' %}


{% block body %}
    <div class="container mt-5">

        <h1>RÃ©capitulatif de ma commande</h1>

        <div class="row my-5">
            <div class="col-md-8">

                <strong>Contenu de mon panier</strong> <br>
                {% for product in cart %}
                    <div class="row mt-2">
                        <div class="col-md-2">
                            <img src="/upload/{{ product.object.illustration }}" class="img-fluid" alt="{{ product.object.name }}">
                        </div>
                        <div class="col-md-6">
                            <strong>{{ product.object.name }}</strong>
                            <span class="d-block">Prix unitaire : {{ product.object.pricewt|price}} </span>
                        </div>
                        <div class="col-md-2 text-right">
                            <span class="badge text-bg-secondary">x{{ product.quantity }}</span>
                        </div>
                        <div class="col-md-2">
                            <strong>{{ (product.quantity * product.object.pricewt)|price }}</strong>
                        </div>
                    </div>

                {% endfor %}
                <div class="bg-light p-3 my-3">
                    <strong>Votre adresse de livraison : </strong> <br>
                    {{ choices.adresses.firstname }} {{ choices.adresses.lastname }} <br>
                    {{ choices.adresses.adress }} <br>
                    {{ choices.adresses.city }} - {{ choices.adresses.country }}

                </div>
                <hr>
                <div class="bg-light p-3 " >
                    <strong>Votre transporteur : </strong><br>
                    {{ choices.carriers.name }} <br>
                    {{ choices.carriers.description }}
                </div>


            </div>
            <div class="col-md-4">
                <div class="bg-light p-3">
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Total produits</span>
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-bold">Frais de livraison</span>
                        <span>{{ choices.carriers.price|price }}</span>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-bold">Total commande</span>
                        <span>{{ (totalWt + choices.carriers.price)|price }}</span>
                    </div>
                    <div>
                        <a href="{{ path('app_order') }}" class="btn btn-success w-100 mt-3">Commander</a>
                    </div>
                </div>
            </div>

        </div>


    </div>
{% endblock %}